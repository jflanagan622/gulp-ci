	<div id="signup-form" style="margin-top: 50px; width: 400px; padding-left: 100px;">
		<form action="/signup" method="POST" class="centered mt-10 ml-10 mr-10">
			<div class="form-group">
				<label class="form-label" for="firstname">First Name</label>
				<input class="form-input" type="text" name="firstname" id="firstname"/>
			</div>
			<div class="form-group">
				<label class="form-label" for="lastname">Last Name</label>
				<input class="form-input" type="text" name="lastname" id="lastname"/>
			</div>
			<div class="form-group">
				<label class="form-label" for="email">Email</label>
				<input class="form-input" type="text" name="email" id="email"/>
			</div>
			<input type="submit" id="submit-new-email" class="btn btn-primary" value="Submit"/>
		</form>
	</div>
	<div id="update-form" style="display: none; margin-top: 50px; width: 400px; padding-left: 100px;">
		<form action="/update" method="PATCH" class="centered mt-10 ml-10 mr-10">
			<div class="form-group">
				<label class="form-label" for="edit-firstname">Edit First Name</label>
				<input class="form-input" type="text" name="edit-firstname" id="edit-firstname"/>
			</div>
			<div class="form-group">
				<label class="form-label" for="edit-lastname">Edit Last Name</label>
				<input class="form-input" type="text" name="edit-lastname" id="edit-lastname"/>
			</div>
			<div class="form-group">
				<label class="form-label" for="edit-email">Edit Email</label>
				<input class="form-input" type="text" name="edit-email" id="edit-email"/>
			</div>
			<input type="submit" id="submit-edit-email" class="btn btn-primary" value="Submit"/>
		</form>
	</div>
	<div style="margin-top: 50px; padding-left: 100px;">
		<button class="btn btn-primary" id="create-contact">Create</button>
		<button class="btn" id="update-contact">Update</button> 
		<button class="btn" id="delete-contact">Delete</button> 
	</div>


